include ../setup/_config.pug

+b.login-component
    +e.P.label Name:
    +e.INPUT(type="text", name="name", [(ngModel)]="name").entry
    +e.P.label E-Mail:
    +e.INPUT(type="email", name="email", [(ngModel)]="email").entry
    +e.P.label Password:
    +e.INPUT(type="password", name="password", [(ngModel)]="password").entry
    br
    br
    +e.INPUT(type="button", value="Login", (click)="signin()").button
    +e.INPUT(type="button", value="Register", (click)="signup()").button
    +e.A(href="/feed").forgot Forgot Password?
